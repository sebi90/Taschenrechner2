<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="customNumberButtons">

        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:onClick">buttonOnClick</item>
        <item name="android:background">@drawable/custom_number_button</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="customButtons" parent="customNumberButtons">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="customEvalButton" parent="customNumberButtons">
        <item name="android:background">@drawable/custom_eval_button</item>

    </style>

    <style name="customNumberButtons2" parent="customButtons">
    </style>

    <style name="customButtons2" parent="customNumberButtons">
    </style>

    <style name="ButtonFontSizeSmall" parent="customNumberButtons">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ButtonFontSizeMedium" parent="customNumberButtons">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="ButtonFontSizeLarge" parent="customNumberButtons">
        <item name="android:textSize">30dp</item>
    </style>


    <style name="DisplayFontSizeSmall" parent="customNumberButtons">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DisplayFontSizeMedium" parent="customNumberButtons">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="DisplayFontSizeLarge" parent="customNumberButtons">
        <item name="android:textSize">40dp</item>
    </style>





</resources>